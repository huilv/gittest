        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="@color/colorButtonBlue"/>
            <padding android:left="8dp" android:right="8dp"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle">
            <corners android:radius="5dp"/>
            <solid android:color="@color/lblue"/>
            <padding android:left="8dp" android:right="8dp"/>
        </shape>
    </item>
</selector>