<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dip" />
            <gradient android:startColor="@color/color_loaning_textview_stroke"
                      android:centerColor="@color/color_loaning_textview_stroke" android:centerY="0.75"
                      android:endColor="@color/color_loaning_textview_stroke" android:angle="270" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient android:startColor="@color/color_button"
                          android:centerColor="@color/color_button" android:centerY="0.75"
                          android:endColor="@color/color_button" android:angle="270" />

            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dip" />
                <gradient android:startColor="@color/color_button"
                          android:centerColor="@color/color_button" android:centerY="0.75"
                          android:endColor="@color/color_button" android:angle="270" />

            </shape>
        </clip>
    </item>

</layer-list>