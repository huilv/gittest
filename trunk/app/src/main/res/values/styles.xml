    <style name="mspinner_style" parent="Platform.Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_down</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:dropDownSelector">@drawable/spinner_down</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">@dimen/dp122</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="style_bg_transparent_dialog" parent="Base.Theme.AppCompat.Light.Dialog">
