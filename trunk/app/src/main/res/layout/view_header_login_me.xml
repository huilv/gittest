<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/about_banner"
    tools:showIn="@layout/fragment_main_me">

    <ImageView
        android:id="@+id/iv_icon_me_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@mipmap/white_logo_without_text" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon_me_fragment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/ll_userspan_me_fragment"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_uername_me_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="your name"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/dp15" />

            <TextView
                android:id="@+id/tv_phone_me_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_uername_me_fragment"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="800023453453"
                android:textColor="@color/white"
                android:textSize="@dimen/dp12" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:layout_marginTop="3dp"
            android:id="@+id/tv_login_me_fragment"
            android:background="@drawable/selector_white_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="your name"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/dp15" />
    </FrameLayout>
</RelativeLayout>