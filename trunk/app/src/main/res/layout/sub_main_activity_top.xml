<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_main_top"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp45"
    android:background="@color/dddblue">

    <ImageButton
        android:id="@+id/id_imagebutton_back"
        android:layout_width="@dimen/dp48"
        android:layout_height="match_parent"
        android:src="@drawable/ic_return"
        android:scaleType="center"
        android:background="@color/transparent_color"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/id_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_button_text"
        android:textSize="16dp"
        android:text="@string/app_name"
        />

    <ImageButton
        android:id="@+id/id_imagebutton_info_list"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:clickable="true"
        android:background="@drawable/selector_info"/>

</RelativeLayout>