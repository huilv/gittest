<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp12">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_repaymentraiders_instruction_title"
            style="@style/text_14dp_dsilivery"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp60"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/loan_app_id" />

        <ImageView
            android:id="@+id/iv_repaymentraiders_instruction"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp12"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp14"
            android:layout_marginRight="@dimen/dp12"
            android:background="@drawable/selector_arc" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_item_repaymentraiders_instruction_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp12"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginRight="@dimen/dp12"
        android:text="text"
        style="@style/text_12dp_tblue"
        android:visibility="gone" />
    <ImageView
        android:layout_width="match_parent"
        android:background="@color/dgrayblue"
        android:layout_height="1px" />

</LinearLayout>