<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp220"
                android:paddingBottom="@dimen/dp10"
                android:scaleType="fitXY"
                android:src="@drawable/about_banner" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_name" />

            <ImageButton
                android:id="@+id/ib_about_back"
                android:layout_width="@dimen/dp48"
                android:layout_height="@dimen/dp48"
                android:background="@color/transparent_color"
                android:scaleType="center"
                android:src="@drawable/ic_return" />

            <TextView
                android:id="@+id/tv_about_title"
                style="@style/text_16sp_white"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp48"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:text="about" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_about"
            style="@style/text_14dp_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/dp14"
            android:paddingRight="@dimen/dp14"
            android:paddingTop="@dimen/dp20"
            android:text="@string/text_about_company_detail" />
    </LinearLayout>
</ScrollView>