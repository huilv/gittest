<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp14"
        android:paddingRight="@dimen/dp14">

        <LinearLayout
            android:id="@+id/id_linearlayout_loan_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp20"
            android:background="@drawable/shape_rectangle_loan_in_process"
            android:orientation="vertical"
            >
            <!--header  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/id_textview_latest_loan_info"
                    style="@style/text_14dp_white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/textview_loan_info_statement" />

                <ImageButton
                    android:id="@+id/ib_info_span_controller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@null"
                    android:src="@drawable/selector_arc_loan_process"
                    android:gravity="center"
                    android:text="@string/button_loan_info_cancel" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"

                android:background="@color/ddsilvery" />

            <!--span of info-->
            <LinearLayout
                android:paddingTop="@dimen/dp08"
                android:id="@+id/ll_span_loan_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp110"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp12">
                <!--Loan app id-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:text="@string/loan_app_id" />

                    <TextView
                        android:id="@+id/id_textview_process_loan_app_id"
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="100234" />

                </LinearLayout>

                <!--KTP-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:text="@string/loan_app_KTP" />

                    <TextView
                        android:id="@+id/id_textview_process_loan_app_ktp"
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1234567891234567" />

                </LinearLayout>

                <!--Application TIme-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:text="@string/loan_create_time" />

                    <TextView
                        android:id="@+id/id_textview_process_loan_app_time"
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2017-1-20" />

                </LinearLayout>

                <!--Loan amount-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:text="@string/loan_amount" />

                    <TextView
                        android:id="@+id/id_textview_process_loan_app_amount"
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RP1,000,000" />

                </LinearLayout>

                <!--Loan period-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:text="@string/loan_period" />

                    <TextView
                        android:id="@+id/id_textview_process_loan_app_period"
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7Days" />

                </LinearLayout>

                <!--Loan costs-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:text="@string/loan_costs" />

                    <TextView
                        android:id="@+id/id_textview_process_loan_app_cost"
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RP140,000" />

                </LinearLayout>
                <!--Loan Total amount-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:text="@string/total_repayment_amount" />

                    <TextView
                        android:id="@+id/id_textview_process_loan_total_amount"
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RP1140,000" />

                </LinearLayout>

                <!--Loan bank code -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:text="@string/bank_name" />

                    <TextView
                        android:id="@+id/id_textview_process_loan_app_bank_code"
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BCA" />

                </LinearLayout>
                <!--Loan bank no-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="1"
                        android:text="@string/bank_card_no" />

                    <TextView
                        android:id="@+id/id_textview_process_loan_app_bank_no"
                        style="@style/text_14dp_ddsilivery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="622592888398490124" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!--Step 1 Audit Passed-->
        <ListView
            android:id="@+id/lv_review_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:visibility="visible"></ListView>

        <TextView
            style="@style/text_12dp_tblue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp14"
            android:layout_marginTop="@dimen/dp14"
            android:gravity="center"
            android:text="@string/textview_laon_info_audit_passed_statement" />

        <Button
            android:id="@+id/id_buttom_loaning_goto_video"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/dp15"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="@string/goto_record_video"
            android:textColor="@color/color_button_text"
            android:textSize="16sp"
            android:visibility="invisible" />

    </LinearLayout>
</ScrollView>