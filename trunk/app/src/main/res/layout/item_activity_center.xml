<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id = "@+id/ll_activity_center_item"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp05"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="@dimen/dp08"
        app:cardElevation="@dimen/dp05"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:id = "@+id/iv_image_activity_center"
        android:tintMode="multiply"
        android:src="@mipmap/temp_bunner"
        android:layout_height="@dimen/dp140" />
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="test"
            android:id = "@+id/tv_content_activity_center"
            style="@style/text_14dp_white"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:id = "@+id/tv_time_activity_center"
            style="@style/text_14dp_white"
            android:text="2017-06-08"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10"/>
</LinearLayout>