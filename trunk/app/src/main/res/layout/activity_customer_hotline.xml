<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    >

    <include layout="@layout/sub_main_activity_top"/>

    <ListView
        android:layout_marginTop="@dimen/dp12"
        android:id = "@+id/lv_customer_hotline"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="@dimen/dp12"></ListView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="@color/color_main_tab_stroke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id = "@+id/iv_customer_hotline_plus"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_width="@dimen/dp24"
            android:layout_height="@dimen/dp24"
            android:src="@drawable/ic_plus"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:inputType="text"
            android:imeOptions="actionGo"
            android:imeActionLabel="@string/text_input_span_send"
            android:id = "@+id/et_customer_hotline"
            android:background="@color/color_loaning_textview_stroke"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_height="@dimen/dp24"/>
        <ImageView
            android:layout_width="@dimen/dp24"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:id = "@+id/iv_customer_hotline_emoji"
            android:src="@drawable/ic_emoji"
            android:layout_height="@dimen/dp24"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px2"
        android:background="@color/color_main_tab_stroke"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:id = "@+id/fl_customer_hotline_container"
        android:visibility="gone"
        android:layout_height="@dimen/dp120">
    </FrameLayout>
</LinearLayout>